<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PermissionsActivity"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="24dp"
        android:id="@+id/relative">

    <Button
            android:text="@string/storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storage_btn"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"/>

    <Button
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_btn"
            android:layout_below="@+id/storage_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"/>

    <Button
            android:text="@string/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_btn"
            android:layout_below="@+id/location_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"/>

    <Button
            android:text="@string/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_btn"
            android:layout_below="@+id/camera_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"/>

    <Button
            android:text="@string/contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contacts_btn"
            android:layout_below="@+id/phone_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"/>
</RelativeLayout>