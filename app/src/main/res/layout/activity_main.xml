<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimaryDark">

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_phone"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/phone_title"
            app:layout_constraintBottom_toBottomOf="@+id/phone_desc"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_contacts"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/contacts_title"
            app:layout_constraintBottom_toBottomOf="@+id/contacts_desc"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_storage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/storage_title"
            app:layout_constraintBottom_toBottomOf="@+id/storage_desc"
            android:textColorHighlight="@color/colorAccent"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_location"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/location_title"
            app:layout_constraintBottom_toBottomOf="@+id/location_desc"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <TextView
            android:text="@string/contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contacts_title"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/phone_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>

    <TextView
            android:text="@string/access_your_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contacts_desc"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/contacts_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"/>

    <TextView
            android:text="@string/make_and_manage_phone_calls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_desc"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/phone_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"/>

    <TextView
            android:text="@string/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_title"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/camera_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>

    <TextView
            android:text="@string/take_pictures_and_record_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_desc"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/camera_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"/>

    <TextView
            android:text="@string/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_title"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/location_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>

    <TextView
            android:text="@string/access_this_device_s_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_desc"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/location_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"/>

    <TextView
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_title"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/storage_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>

    <TextView
            android:text="@string/choose_what_to_allow_app_to_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MainText"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="@string/storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storage_title"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/MainText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"/>

    <TextView
            android:text="@string/access_photos_media_and_files_on_your_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storage_desc"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintTop_toBottomOf="@+id/storage_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_camera"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/camera_title"
            app:layout_constraintBottom_toBottomOf="@+id/camera_desc"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <Button
            android:text="@string/continue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/continue_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_btn"
            app:layout_constraintEnd_toStartOf="@+id/continue_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"/>

</androidx.constraintlayout.widget.ConstraintLayout>